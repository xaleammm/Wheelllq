<body>

<h2>Крутить колесо</h2>

<div id="wheel-container">
    <div id="wheel"></div>
    <div id="pointer"></div>
</div>

<button onclick="spin()">Крутить</button>

<div id="result"></div>

<script>
let spinning = false;

function spin() {
    if (spinning) return; // запретить новое вращение пока идет вращение
    spinning = true;

    const wheel = document.getElementById('wheel');
    const resultDiv = document.getElementById('result');

    // случайное вращение от 3 до 6 оборотов
    const spins = Math.floor(Math.random() * 3 + 3); 
    // добавим рандомный угол для 50/50
    const extraDeg = Math.random() < 0.5 ? 0 : 180; 
    const totalDeg = spins * 360 + extraDeg;

    wheel.style.transform = `rotate(${totalDeg}deg)`;

    setTimeout(() => {
        // определяем результат по extraDeg
        const result = extraDeg === 0 ? "ДА" : "НЕТ";
        resultDiv.textContent = result;
        spinning = false;
    }, 4000); // совпадает с transition
}
</script>

</body>
